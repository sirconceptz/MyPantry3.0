<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.activity.MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/product_cardView"
        style="@style/Theme.MyPantry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/product_cardView"
            app:layout_constraintTop_toTopOf="@id/product_cardView" />

        <TextView
            android:id="@+id/text_productQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="34dp"
            android:text="@string/product_quantity"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_productWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="56dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_productVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="78dp"
            android:layout_marginBottom="4dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_hasSugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="60dp"
            android:text="@string/product_features_with_sugar"
            android:textSize="15sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_isVege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="130dp"
            android:text="@string/product_vege"
            android:textSize="16sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_isBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="190dp"
            android:text="@string/product_bio"
            android:textSize="16sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_hasSalt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="200dp"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:text="@string/product_features_with_salt"
            android:textSize="15sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_expirationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="@string/product_expiration_date"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_expirationDateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:textSize="16sp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>